<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="126dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="103dp"
        android:backgroundTint="#989494"
        android:onClick="check"
        android:text="Check for hazmat"
        android:textColor="#FF3B52"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etTest"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="161dp"
        android:ems="10"
        android:hint="enter class nr"
        android:inputType="textPersonName"
        android:maxLength="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPlacard"
        android:layout_width="179dp"
        android:layout_height="193dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTest"
        app:layout_constraintVertical_bias="0.34"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/etUnNr"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="151dp"
        android:ems="10"
        android:hint="enter un nr"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTest" />

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="106dp"
        android:ems="10"
        android:hint="enter product weight"
        android:inputType="number"
        android:maxLength="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUnNr" />

    <Button
        android:id="@+id/button2"
        android:layout_width="127dp"
        android:layout_height="57dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="#377A3A"
        android:onClick="tesst"
        android:text="Store hazmat info"
        android:textColor="#050505"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>